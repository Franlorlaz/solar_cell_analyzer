<MeasurePopup>:
    id_measurepopup:
        prueba_1, prueba_2, \
        stop_button
    auto_dismiss: False
    title: 'Midiendo...'
    size_hint: 0.85,0.7
    pos_hint: {'center_x':0.5, 'top':0.92}

    BoxLayout:
        id: prueba
        size: root.size
        pos: root.pos
        orientation: "vertical"

        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: 50
            GridLayout:
                cols: 5
                rows: 2

                Label:
                    bold: True
                    text: 'PCE'

                Label:
                    bold: True
                    text: 'FF'

                Label:
                    bold: True
                    text: 'Pmax'

                Label:
                    bold: True
                    text: 'Jsc'

                Label:
                    bold: True
                    text: 'Voc'

                Label:
                    bold: True
                    text: '(%)'

                Label:
                    bold: True
                    text: '(-)'

                Label:
                    bold: True
                    text: '(W/cm2)'

                Label:
                    bold: True
                    text: '(A/cm2)'

                Label:
                    bold: True
                    text: '(V)'

            LineaDivisoria

        Label:
            id: prueba_1
            text: 'Medida 1, Medida 2, Medida 3'
        Label:
            id: prueba_2
            text: 'Medida 1, Medida 2, Medida 3'

        BoxLayout:
            size_hint_y: None
            height: 30

            Button:
                id: stop_button
                text: "Stop"
                on_release:
                    if stop_button.text == 'Stop': stop_button.text = 'Volver'
                    #if stop_button.text == 'Volver': stop_button.text = 'Stop'
                on_press:
                    if stop_button.text == 'Stop': app.root.stop()
                    if stop_button.text == 'Volver': root.dismiss()

