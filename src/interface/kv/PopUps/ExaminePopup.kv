<ExaminePopup>:
    id_examine_popup:
        filechooser
    auto_dismiss: False
    title: 'Examine...'
    size_hint: 0.7,0.7
    pos_hint: {'center_x':0.5, 'top':0.92}

    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"

        #FileChooserListView:
        FileChooserIconView:
            id: filechooser
            path: root.save_init_path
            dirselect: True

        BoxLayout:
            size_hint_y: None
            height: 30

            BoxLayout:
                size_hint: 0.2, 1

            Button:
                text: "Cancel"
                on_release: root.dismiss()

            BoxLayout:
                size_hint: 0.2, 1

            Button:
                text: "Load"
                on_release: app.root.act_label_dir()

            BoxLayout:
                size_hint: 0.2, 1

        BoxLayout:
            size_hint_y: None
            height: 10
