<ErrorWarningPopup>:
    id_error_warning_popup:
        layout_error_msg, error_msg, \
        ok_button
    auto_dismiss: False
    title: 'Error / Warning'
    size_hint: 0.55,0.4
    pos_hint: {'center_x':0.5, 'top':0.75}

    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"

        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 0.1

        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 0.20

            Label:
                text: 'Error'

            LineaDivisoria

        BoxLayout:
            id: layout_error_msg
            orientation: 'vertical'
            size_hint_y: 0.60

            Label:
                id: error_msg
                text_size: root.width-20, root.height-20
                halign: 'center'
                valign: 'middle'
                text: ' '

        BoxLayout:
            size_hint_y: 0.20

            Button:
                id: ok_button
                text: "Ok"
                on_press: root.dismiss()
