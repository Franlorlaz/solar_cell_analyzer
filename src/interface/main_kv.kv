<MainScreen>:
    orientation: 'vertical'
    canvas:
        Color:
            rgb: 0.25,0.25,0.25
        Rectangle:
            size: self.size
            pos: self.pos

    ActionBarS0:
        id: actionbar

    BoxLayout:
        id: main_layout
        orientation: 'vertical'
        padding: 10
        spacing: 10

        Section1:
            id: section1
            size_hint: 1, 0.4
        LineaDivisoria
        Section2:
            id: section2
            size_hint: 1, 0.35
        LineaDivisoria
        Section3:
            id: section3
            size_hint: 1, 0.25
